<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PM02PG02.Views.PersonasPage">
    <ContentPage.Content>
        <ScrollView><StackLayout>
            
            <Label Text="ID"></Label>            <Entry x:Name="txtid" Placeholder="Ingrese su ID" Keyboard="Numeric"></Entry>            <Label Text="Nombre"></Label>            <Entry x:Name="txtnomb" Placeholder="Ingrese su Nombre"></Entry>            <Label Text="Apellido"></Label>            <Entry x:Name="txtapellido" Placeholder="Ingrese su Apellido"></Entry>            <Label Text="Edad"></Label>            <Entry x:Name="txtedad" Placeholder="Ingrese su Edad" Keyboard="Text"></Entry>            <Label Text="Direccion"></Label>            <Editor x:Name="txtdireccion" Placeholder="Ingrese su Direccion" Keyboard="Email" />            <Label Text="Correo"></Label>            <Entry x:Name="txtcorreo" Placeholder="Ingrese su Correo"/>

            <Button x:Name="btnenviar" Text="Enviar informacion" Clicked="btnenviar_Clicked"></Button>



        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>